# Explicitly include required data files in distribution
# These small files are essential and always included in the package
include uaforge/data/device_models.json
include uaforge/data/market_share.json
include uaforge/data/os_distribution.json

# Large files (chrome_versions, chromium_versions, edge_versions, opera_versions)
# are in .gitignore and downloaded during pip install via setup.py

# Include documentation
include README.md
include LICENSE

# Exclude development and testing files
exclude simple_test.py
exclude test_*.py
exclude demo*.py
exclude validation_script.py
exclude comprehensive_test.py
exclude mobile_test.py
exclude cleanup_history.sh
exclude download_data.py

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .DS_Store
