# Include data files in distribution
# Note: Large files are in .gitignore and won't be included
# They are downloaded during pip install via setup.py
include uaforge/data/*.json

# Include documentation
include README.md
include LICENSE

# Exclude development and testing files
exclude simple_test.py
exclude test_*.py
exclude demo*.py
exclude validation_script.py
exclude comprehensive_test.py
exclude mobile_test.py
exclude cleanup_history.sh
exclude download_data.py

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .DS_Store
