# ALL JSON data files are downloaded during pip install from GitHub releases
# NO JSON files are included in the source distribution or committed to git
# This keeps the package small and allows for independent data updates

# Include documentation
include README.md
include LICENSE

# Exclude development and testing files
exclude simple_test.py
exclude test_*.py
exclude demo*.py
exclude validation_script.py
exclude comprehensive_test.py
exclude mobile_test.py
exclude cleanup_history.sh
exclude download_data.py

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .DS_Store
